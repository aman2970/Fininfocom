<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/infoCl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/studentIv"
            android:layout_width="@dimen/margin_50dp"
            android:layout_height="@dimen/margin_50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/margin_10dp"
            android:src="@drawable/ic_user"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/studentNameTv"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/studentIv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Aman singh"
            android:textSize="@dimen/textsize_16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/studentAgeTv"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/studentIv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_5dp"
            app:layout_constraintTop_toBottomOf="@id/studentNameTv"
            android:text="18 years"
            android:textSize="@dimen/textsize_14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/studentCityTv"
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/studentIv"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_5dp"
            app:layout_constraintTop_toBottomOf="@id/studentAgeTv"
            android:text="Gurugram"
            android:textSize="@dimen/textsize_14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/infoCl"
        android:background="@color/border_grey"
        android:layout_marginTop="@dimen/margin_5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>